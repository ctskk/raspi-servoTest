{
    "compilerOptions": {
        "sourceRoot": "./src",
        "outDir": "./out",
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "inlineSourceMap": false,
        "listFiles" : true,
        "noFallthroughCasesInSwitch" : true,
        "noImplicitAny" : false,
        "noImplicitReturns" : true,
        "noImplicitThis" : false,
        "noUnusedLocals" : false,
        "noUnusedParameters" : false,
        "pretty" : true,
        "removeComments" : true,
        "traceResolution" : false
    },
    "exclude": [
        "node_modules"
    ]
}
